<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start route :"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/search_icon"
        android:hint="From"
        android:textStyle="bold|italic"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/search_icon"
        android:hint="To"
        android:textStyle="bold|italic"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End route :"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold|italic"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Vehicle"
        android:layout_gravity="center"
        android:layout_marginTop="-160dp"
        android:textStyle="bold|italic"

        android:textSize="20sp"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bike_icon"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.100/= Per Km"
        android:layout_gravity="center"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="-40dp"
        android:textStyle="italic"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-130dp"
        android:layout_marginTop="-40dp"
        android:src="@drawable/car_icon"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-130dp"
        android:layout_marginTop="-40dp"
        android:text="Rs.200/= Per Km"
        android:layout_gravity="center"
        android:layout_marginBottom="-70dp"
        android:textStyle="italic"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="-130dp"
        android:layout_marginTop="-40dp"
        android:src="@drawable/bus_icon"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-130dp"
        android:text="Rs.300/= Per Km"
        android:layout_marginTop="-40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-70dp"
        android:textStyle="italic"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Request Ride"
        android:background="@drawable/green_btn"
        android:layout_marginTop="-40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-160dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_icon"
        android:layout_gravity="center"
        android:layout_marginBottom="-240dp"
        android:layout_marginStart="-120dp"
        android:scaleX="4"
        android:scaleY="4"
        android:layout_marginTop="-40dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginBottom="-230dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="-40dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/textviewofnumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:layout_marginBottom="-260dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="-40dp"
        android:layout_gravity="center"
        android:text="0715292215"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/makecall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Contact Driver"
        android:layout_marginTop="-40dp"
        android:background="@drawable/green_btn"
        android:layout_gravity="center"
        android:layout_marginBottom="-320dp"/>

</FrameLayout>